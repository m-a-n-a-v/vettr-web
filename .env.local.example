# VETTR Web App - Environment Variables
# Copy this file to .env.local and fill in the values

# ==============================================================================
# API Configuration
# ==============================================================================

# Backend API Base URL (required)
# Production: https://vettr-backend.vercel.app/v1
# Development: http://localhost:3001/v1 (if running backend locally)
NEXT_PUBLIC_API_URL=https://vettr-backend.vercel.app/v1

# ==============================================================================
# Build Configuration (optional)
# ==============================================================================

# Node environment (automatically set by Next.js)
# NODE_ENV=development|production|test

# ==============================================================================
# Analytics & Monitoring (optional - Vercel only)
# ==============================================================================

# Vercel Analytics (automatically enabled when deployed to Vercel)
# No configuration needed - handled by @vercel/analytics package

# Vercel Speed Insights (automatically enabled when deployed to Vercel)
# No configuration needed - handled by @vercel/speed-insights package

# ==============================================================================
# Feature Flags (optional)
# ==============================================================================

# Enable PWA features (service worker, offline support)
# Default: enabled in production, disabled in development
# NEXT_PUBLIC_ENABLE_PWA=true

# Enable debug logging
# NEXT_PUBLIC_DEBUG=false

# ==============================================================================
# Notes
# ==============================================================================

# - All NEXT_PUBLIC_* variables are exposed to the browser
# - Never commit .env.local to version control
# - For Vercel deployment, set environment variables in project settings
# - API_URL must NOT have a trailing slash
